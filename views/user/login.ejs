<% var alerts = req.flash('success'); %>
<% for (var i in alerts) { %>
  <div class="alert alert-success">
    <%= alerts[i] %>
  </div>
<% } %>

<form action="/user/signin/" method="POST">
  <% var alerts = req.flash('error'); %>
  <% for (var i in alerts) { %>
    <div class="alert alert-danger">
      <%= alerts[i] %>
    </div>
  <% } %>

  <div class="card card-login mx-auto mt-5">
    <div class="card-header">
      Logowanie
    </div>
    <div class="card-body">
      <form>
        <div class="form-group">
          <label for="email">Adres e-mail</label>
          <input type="email" id="email" class="form-control" placeholder="E-mail" name="email" />
        </div>
        <div class="form-group">
          <label for="password">Hasło</label>
          <input type="password" id="password" class="form-control" placeholder="Hasło" name="password" />
        </div>
        <input class="btn btn-primary btn-block" type="submit" value="Loguj" />
      </form>
      <div class="text-center">
        <a class="d-block small mt-3" href="/user/new/">Zarejestruj się</a>
      </div>
    </div>
  </div>
</form>
