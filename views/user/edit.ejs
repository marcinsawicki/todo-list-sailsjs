<main>
  <form action="/user/update/<%= user.id %>" method="POST">
    <div class="card card-form mx-auto mt-5">
      <div class="card-header">
        Edycja danych
      </div>
      <div class="card-body">
        <form>
          <div class="form-group">
            <label for="name">Imię i nazwisko</label>
            <input type="text" id="name" class="form-control" value="<% if (user.name) { %><%= user.name %><% } %>" placeholder="Imię i nazwisko" name="name" />
          </div>
          <div class="form-group">
            <label for="email">Adres e-mail</label>
            <input type="email" id="email" class="form-control" value="<% if (user.email) { %><%= user.email %><% } %>" placeholder="E-mail" name="email" />
          </div>
          <div class="form-group">
            <label for="role">Stanowisko</label>
            <input type="text" id="role" class="form-control" value="<% if (user.role) { %><%= user.role %><% } %>" placeholder="Stanowisko" name="role" />
          </div>
          <input class="btn btn-primary btn-block" type="submit" value="Zapisz" />
        </form>
      </div>
    </div>
  </form>
</main>
