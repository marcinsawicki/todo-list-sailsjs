<% var alerts = req.flash('success'); %>
<% for (var i in alerts) { %>
  <div class="alert alert-success">
    <%= alerts[i] %>
  </div>
<% } %>
<div class="row">
  <div class="col-lg-8">
    <h3>Witaj <% if (!user.name) { %> Nieznajomy <% } else { %> <%= user.name %> <% } %></h3>
    <br />
    Poniżej znajduje się lista zadań do zrobienia.
    <hr />
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-table"></i> TODO list
      </div>
      <div class="card-body">
        <table class="table table-bordered dataTable" width="100%" id="dataTable" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
          <thead>
            <tr role="row">
              <th>
                Opis
              </th>
              <th>
                Akcje
              </th>
            </tr>
          </thead>
          <tbody>
            <% _.each(user.tasks, function(task) { %>
            <tr role="row">
              <td>
                <%= task.task %>
              </td>
              <td style="text-align:center;">
                <a href="/list/delete/<%= task.id %>"><i class="fa fa-times" aria-hidden="true"></i></a>
              </td>
            </tr>
            <% }); %>
          </tbody>
          <tfoot>
            <tr role="row">
              <th>
                Opis
              </th>
              <th>
                Akcje
              </th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-user" aria-hidden="true"></i> Twoje dane
      </div>
      <div class="card-body">
        <% if (user.name) { %><%= user.name %><br /><% } %>
        <% if (user.email) { %><%= user.email %><br /><% } %>
        <% if (user.street) { %><%= user.street %><br /><% } %>
        <% if (user.postcode) { %><%= user.postcode %><br /><% } %>
      </div>
    </div>
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-bars" aria-hidden="true"></i> Menu
      </div>
      <div class="list-group list-group-flush small">
        <a class="list-group-item list-group-item-action" href="/user/edit/<%= user.id %>">Edytuj dane</a>
        <a class="list-group-item list-group-item-action" href="/list/new/<%= user.id %>">Dodaj zadanie</a>
      </div>
    </div>
  </div>
</div>
